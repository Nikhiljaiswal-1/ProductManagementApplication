@model IEnumerable<ProductManagementApp.Models.Product>

<h2>Product List</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Price</th> <!-- Add Price column header -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Quantity</td>
                <td>@product.Date.ToShortDateString()</td>
                <td>@(product.Price.HasValue ? product.Price.Value.ToString("C") : "N/A")</td>
            </tr>
        }
    </tbody>
</table>
