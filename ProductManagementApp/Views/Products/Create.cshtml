@model ProductManagementApp.Models.Product

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" required />
    </div>
    <div>
        <label>Description</label>
        <textarea asp-for="Description" maxlength="250" required></textarea>
    </div>
    <div>
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" required />
    </div>
    <div>
        <label>Date</label>
        <input asp-for="Date" type="date" required />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" required /> <!-- Add Price field -->
    </div>
    <button type="submit">Save</button>
</form>
